{% if post.lang == "spanish" %}
<div class="postspanish">
{% else %}
<div class="postenglish">
{% endif %}
    <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
    <div class="date">
        posted on <span class="date">{{ post.date | date_to_long_string }}</span>
    </div>
    <div class="tags">
        {% for t in post.tags %}
            {{ t }} {% if forloop.last == false %}, {% endif %}
        {% endfor %}
    </div>

    <div class="postbody" style="clear:both">
        {{ post.content }}
    </div>
</div>

